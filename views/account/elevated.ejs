<!-- content heading -->
<% if (title) { %>
    <h1 id="centered"><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
<% }%>

<h2>Welcome <%- firstname %> </h2>

<h3>Update Account Information</h3>
<% const url = "/account/updateAccountInfo/" +locals.accountData.account_id %>
<p><a href="<%-url%>">Update Account Information</a></p>

<h3>Inventory Management</h3>
<p><a href="/inv/">View Inventory</a></p>

<h3>Message Center</h3>
<ul>
    <li>You have <%- unreadMessages %> unread message/s</li>
    <li>
        Go to 
        <!-- route to the server and then to routes -->
        <a class="links" href="/message/"> Inbox </a> 
    </li>
</ul>
