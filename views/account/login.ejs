<!-- content heading -->
<% if (title) { %>
    <h1 id="centered"><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>

<!-- will display a flash message if one is sent from controller -->
<%- messages() %>

<!-- basic login form -->
<form>
    <div id="center-form-content">
        <label class="required" for="email">Email:</label><br>
        <input type="email" id="email" name="account_email"  placeholder="Email Address" required><br>
        <label class="required" for="passsword">Password:</label><br>
        <input type="text" id="passsword" name="account_password" placeholder="Password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required><br><br>
        <input id="submit" type="submit" value="Login">
        <p id="sign-up"> No account? 
            <a href="/account/register">Sign-up</a>
        </p>
    </div>
</form> 