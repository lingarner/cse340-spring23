<!-- content heading -->
<% if (title) { %>
    <h1 id="centered"><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>

  <form>
    <div id="center-form-content">
        <label for="fname">First Name:</label><br>
        <input type="text" id="fname" name="account_firstname" required><br><br>

        <label for="lname">Last Name:</label><br>
        <input type="text" id="lname" name="account_lastname" required><br><br>

        <label for="email">Email:</label><br>
        <input type="email" id="email" name="account_email" required><br><br>

        <label for="password">Password:</label><br>
        <input type="password" id="password" name="account_password" required><br><br>
        <p id="password-description">
            The password must be:<br>
            12 characters in length, minimum<br>
            contain at least 1 capital letter<br>
            contain at least 1 number<br>
            contain at least 1 special character
        </p>

        <input type="submit" value="Register" id="register">
    </div>
  </form>

