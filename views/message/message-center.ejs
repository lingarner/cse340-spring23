<!-- content heading -->
<% if (title) { %>
    <h1 id="centered"><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
<% }%>


<h3>Message Center</h3>
<ul>
    <li>
        <a href="message/new-message">Create a New Message</a>
    </li>
    <li>
        <a href="message/archived">View ___ Archived Message</a>
    </li>
</ul>

<table id="messageDisplay">
    <%- messageTable %>
</table>
